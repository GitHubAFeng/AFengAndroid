<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/nav_header_bg"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:background="@drawable/ic_nav_bg_drawerlayout"
        android:gravity="bottom"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4000"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="64dp"
            android:paddingTop="16dp">

            <ImageView
                android:id="@+id/nav_iv_avatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/user_def_avatar"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/nav_tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="未登录"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/nav_tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/shape_bg_level"
                    android:text="心情"
                    android:textColor="@color/colorWhite"
                    android:textSize="10dp"
                    android:textStyle="italic|bold" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

